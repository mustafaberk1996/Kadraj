<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/exoPlayer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        android:scaleType="centerCrop"
        app:use_controller="false"
        />

    <ImageView

        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/tvVideoDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:00:00"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/exoPlayer"
        app:layout_constraintRight_toRightOf="@+id/exoPlayer"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/videos_list_duration_tv_background"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/tvVideoPublisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/exoPlayer"
        android:layout_marginTop="3dp"
        android:text="Joey Farina"
        android:textStyle="bold"
        />


</androidx.constraintlayout.widget.ConstraintLayout>